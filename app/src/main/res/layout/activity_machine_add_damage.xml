<?xml version="1.0" encoding="utf-8"?>
<com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical">

    <include
        layout="@layout/common_titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="80%"
        android:orientation="vertical"
        app:layout_marginPercent="2%">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_bg_bule"
            android:scrollbars="none"
            app:layout_heightPercent="55%"
            android:orientation="vertical">
            <com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
                <com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    app:layout_marginTopPercent="2%"
                    app:layout_marginLeftPercent="2%"
                    app:layout_marginRightPercent="2%"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:text="@string/machine_check_content"/>
                    <Spinner
                        android:id="@+id/activity_machine_damage_sp_type"
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_height="@dimen/common_spinner_height"></Spinner>
                </com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>
                <com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_marginTopPercent="2%"
                    app:layout_marginLeftPercent="2%"
                    app:layout_marginRightPercent="2%"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="@string/machine_check_desc"/>
                    <Spinner
                        android:id="@+id/activity_machine_damage_sp_desc"
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_height="@dimen/common_spinner_height"></Spinner>
                </com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>
                <com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_marginTopPercent="2%"
                    app:layout_marginLeftPercent="2%"
                    app:layout_marginRightPercent="2%"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="@string/machine_check_step"/>
                    <Spinner
                        android:id="@+id/activity_machine_damage_sp_step"
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_height="@dimen/common_spinner_height"></Spinner>
                </com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>
                <com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    app:layout_marginTopPercent="2%"
                    app:layout_marginLeftPercent="2%"
                    app:layout_marginRightPercent="2%"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:text="@string/machine_check_judge"/>
                    <Spinner
                        android:id="@+id/activity_machine_damage_sp_judge"
                        android:layout_width="match_parent"
                        android:textSize="15sp"
                        android:layout_height="@dimen/common_spinner_height"></Spinner>
                </com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>
                <com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_marginTopPercent="2%"
                    app:layout_marginLeftPercent="2%"
                    app:layout_marginRightPercent="2%"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:text="@string/machine_check_isuse"/>
                    <CheckBox
                        android:id="@+id/activity_machine_damage_isuse"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/common_margin"
                        style="@style/myCheckBox"
                        android:layout_height="wrap_content"></CheckBox>
                </com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>
                <com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_marginTopPercent="2%"
                    app:layout_marginLeftPercent="2%"
                    app:layout_marginRightPercent="2%"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:text="@string/machine_check_remark"/>
                    <EditText
                        android:id="@+id/activity_machine_damage_remarks"
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/common_margin"
                        android:textSize="15sp"
                        android:hint="备注字数应小于50个"
                        android:layout_height="wrap_content"></EditText>
                </com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>
            </com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>
        </ScrollView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:scrollbars="none"
            android:orientation="vertical"
            >
            <com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout
                    android:id="@+id/activity_machine_damage_layout_add_image"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_margin"
                        android:text="添加检修图片（长按勾选左上角可以删除）"/>
                    <HorizontalScrollView
                        android:id="@+id/activity_machine_damage_image_hsor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_bg_bule"
                        android:scrollbars="none"
                        android:fillViewport="false">

                        <com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout
                                android:id="@+id/activity_machine_damage_image_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical">

                            </com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>

                            <Button
                                android:id="@+id/activity_machine_damage_btn_add_image"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/ic_add_photo"
                                />
                            <Button
                                android:id="@+id/activity_machine_damage_btn_delete_image"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/ic_delete_photo"
                                />
                        </com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>

                    </HorizontalScrollView>
                </com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>
                <com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout
                    android:id="@+id/activity_machine_demage_layout_add_video"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_margin"
                        android:text="添加检修视频（最长拍摄时间一分钟，长按勾选左上角可以删除）"/>
                    <HorizontalScrollView
                        android:id="@+id/activity_machine_damage_video_hsor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_bg_bule"
                        android:scrollbars="none">

                        <com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout
                                android:id="@+id/activity_machine_damage_video_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical">

                            </com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>

                            <Button
                                android:id="@+id/activity_machine_damage_btn_add_video"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/ic_add_photo"
                                />
                            <Button
                                android:id="@+id/activity_machine_damage_btn_delete_video"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/ic_delete_photo"
                                />
                        </com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>
                    </HorizontalScrollView>
                </com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>
            </com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>
        </ScrollView>
    </com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>
    <com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/activity_machine_damage_mar"
            style="@style/BaseButBgStyle"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/activity_machine_damage_finish"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/common_theme_color"
                android:text="完成"
                android:textColor="@color/white"
                />
        </com.balysv.materialripple.MaterialRippleLayout>
    </com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>
</com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>