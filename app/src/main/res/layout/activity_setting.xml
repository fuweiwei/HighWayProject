<?xml version="1.0" encoding="utf-8"?>
<com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="@color/main_bg_color"
    android:orientation="vertical">
    <com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include
            layout="@layout/common_titlebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginPercent="2%"
            android:orientation="vertical">
            <com.balysv.materialripple.MaterialRippleLayout
                style="@style/BaseButBgStyle"
                android:layout_width="match_parent"
                app:layout_heightPercent="7%"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/dialog_setting_ip"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/common_margin"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    app:layout_textSizePercent="40%"
                    android:drawableRight="@drawable/icon_tree_next"
                    android:text="设置IP地址：192.168.0.3:8000"
                    />
            </com.balysv.materialripple.MaterialRippleLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.0dp"
                android:background="@color/main_bg_color"/>
            <com.balysv.materialripple.MaterialRippleLayout
                style="@style/BaseButBgStyle"
                android:layout_width="match_parent"
                app:layout_heightPercent="7%"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/dialog_setting_update"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/common_margin"
                    android:background="@color/white"
                    android:paddingRight="10dp"
                    android:drawableRight="@drawable/icon_tree_next"
                    android:gravity="center_vertical"
                    android:text="检查更新：v1.0.3.0"
                    />
            </com.balysv.materialripple.MaterialRippleLayout>
            <com.balysv.materialripple.MaterialRippleLayout
                style="@style/BaseButBgStyle"
                android:layout_width="match_parent"
                app:layout_heightPercent="7%"
                app:layout_marginTopPercent="4%"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/dialog_setting_fix"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:paddingRight="10dp"
                    android:drawableRight="@drawable/icon_tree_next"
                    android:paddingLeft="@dimen/common_margin"
                    android:gravity="center_vertical"
                    android:text="定期检查病害库：已更新"
                    />
            </com.balysv.materialripple.MaterialRippleLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.0dp"
                android:background="@color/main_bg_color"/>
            <com.balysv.materialripple.MaterialRippleLayout
                style="@style/BaseButBgStyle"
                android:layout_width="match_parent"
                app:layout_heightPercent="7%"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/dialog_setting_often"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:drawableRight="@drawable/icon_tree_next"
                    android:paddingRight="10dp"
                    android:paddingLeft="@dimen/common_margin"
                    android:gravity="center_vertical"
                    android:text="经常检查病害库：有更新"
                    />
            </com.balysv.materialripple.MaterialRippleLayout>
            <com.balysv.materialripple.MaterialRippleLayout
                style="@style/BaseButBgStyle"
                android:layout_width="match_parent"
                app:layout_heightPercent="7%"
                app:layout_marginTopPercent="4%"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/dialog_setting_about"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="10dp"
                    android:background="@color/white"
                    android:drawableRight="@drawable/icon_tree_next"
                    android:paddingLeft="@dimen/common_margin"
                    android:gravity="center_vertical"
                    android:text="关于系统"
                    />
            </com.balysv.materialripple.MaterialRippleLayout>
        </com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>
    </com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>

</com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>