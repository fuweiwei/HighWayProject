<?xml version="1.0" encoding="utf-8"?>
<com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_bg_color"
    android:orientation="vertical">
    <com.ty.highway.highwaysystem.ui.widget.MyTitle
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_title_bg_color"
        app:layout_heightPercent="8%">
        <com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:layout_heightPercent="60%">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_textSizePercent="30%"
                android:textColor="@color/white"
                />
        </com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>
        <com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            app:layout_heightPercent="60%">
            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_widthPercent="10%"
                android:background="@drawable/common_selectable_background"
                android:text="返回"
                android:textColor="@color/white"
                app:layout_textSizePercent="25%" />
        </com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>
        <com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            app:layout_heightPercent="60%">

            <Button
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_widthPercent="10%"
                android:background="@drawable/common_selectable_background"
                android:textColor="@color/white"
                app:layout_textSizePercent="25%" />
        </com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>
    </com.ty.highway.highwaysystem.ui.widget.MyTitle>
</com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>