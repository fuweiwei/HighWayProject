<?xml version="1.0" encoding="utf-8"?>
<com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical" >

    <com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="30%">
        <TextView
            android:id="@+id/login_info_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="22%"
            app:layout_textSizePercent="9%"
            android:background="@color/common_theme_color"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="添加图片"
            android:textColor="@color/white" />

        <com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/d_gary"
            android:orientation="vertical" >

            <Button
                android:id="@+id/tv_carmera"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/common_btn_selector"
                app:layout_heightPercent="25%"
                app:layout_marginLeftPercent="15%"
                app:layout_marginRightPercent="15%"
                app:layout_marginTopPercent="13%"
                app:layout_textSizePercent="12%"
                android:text="拍照"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/tv_album"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/common_btn_selector"
                app:layout_heightPercent="25%"
                app:layout_marginLeftPercent="15%"
                app:layout_marginRightPercent="15%"
                app:layout_marginTopPercent="13%"
                app:layout_textSizePercent="12%"
                android:text="相册"
                android:textColor="@color/white" />
        </com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>
    </com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>



</com.ty.highway.frameworklibrary.support.percent.PercentLinearLayout>